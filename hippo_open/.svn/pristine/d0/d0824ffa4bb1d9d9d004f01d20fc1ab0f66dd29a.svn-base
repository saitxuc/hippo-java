<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>broker</id>
	<baseDirectory>pinganfu-hippo</baseDirectory>
	<formats>
		<format>dir</format>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<includes>
				<include>hippo.run/bin/*</include>
				<include>hippo.run/conf/*</include>
			</includes>
			<excludes>
				<exclude>**/src/**</exclude>
				<exclude>**/target/**</exclude>
				<exclude>**/.*/**</exclude>
			</excludes>
		</fileSet>
	</fileSets>
	<moduleSets>
		<moduleSet>
			<includes>
				<include>com.pinganfu.hippo:hippo.run</include>
			</includes>
			<binaries>
				<outputDirectory>hippo.run/lib/</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<outputDirectory>hippo.run/lib</outputDirectory>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>
